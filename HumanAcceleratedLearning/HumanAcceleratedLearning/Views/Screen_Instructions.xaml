<UserControl x:Class="HumanAcceleratedLearning.Views.Screen_Instructions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanAcceleratedLearning.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                   TextWrapping="Wrap"
                   Text="{Binding Path=InstructionsText, FallbackValue=Instructions}"
                   Margin="100"
                   />
    </Grid>
</UserControl>
